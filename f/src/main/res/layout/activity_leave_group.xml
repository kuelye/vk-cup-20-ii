<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".ui.LeaveGroupsActivity">

    <com.kuelye.vkcup20ii.core.ui.view.Toolbar
        android:id="@+id/toolbar"
        android:background="?android:windowBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingTop="@dimen/padding_standard_half"
        android:paddingStart="@dimen/padding_standard"
        android:paddingEnd="@dimen/padding_standard"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        app:layout_behavior="com.kuelye.vkcup20ii.core.ui.view.Toolbar$ScrollingViewBehavior" />

    <com.kuelye.vkcup20ii.core.ui.view.BottomSheetLayout
        android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp">

        <FrameLayout
            android:id="@+id/leaveLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:windowBackground"
            app:layout_scrimEnabled="false">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginTop="@dimen/padding_standard_three_quarters"
                android:layout_marginRight="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/padding_standard_three_quarters"
                android:backgroundTint="@color/button_color"
                android:fontFamily="sans-serif-medium"
                android:text="@string/info_open"
                android:textColor="@color/title_light_color"
                android:textSize="16sp" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/groupInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_sheet"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_standard"
            android:paddingEnd="@dimen/padding_standard">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/padding_standard"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/title_color"
                android:textSize="17sp"
                tools:text="Happy Santa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_standard_half"
                android:paddingBottom="@dimen/padding_standard_half">

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginEnd="@dimen/padding_standard_three_quarters"
                    android:src="@drawable/ic_followers_outline_20"
                    android:tint="@color/icon_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_color"
                    android:textSize="15sp"
                    tools:text="188,2K подписчиков · 119 друзей" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_standard_half"
                android:paddingBottom="@dimen/padding_standard_half">

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginEnd="@dimen/padding_standard_three_quarters"
                    android:src="@drawable/ic_article_outline_20"
                    android:tint="#99A2AD" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_color"
                    android:textSize="15sp"
                    tools:text="Разрабатываем приложения для вас и ваших друзей с 2011 года." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_standard_three_quarters"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_standard_half"
                android:paddingBottom="@dimen/padding_standard_half">

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginEnd="@dimen/padding_standard_three_quarters"
                    android:src="@drawable/ic_newsfeed_outline_20"
                    android:tint="#99A2AD" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_color"
                    android:textSize="15sp"
                    tools:text="Последняя запись 8 февраля" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_standard_three_quarters"
                android:layout_marginBottom="@dimen/padding_standard_three_quarters"
                android:backgroundTint="@color/button_color"
                android:fontFamily="sans-serif-medium"
                android:text="@string/info_open"
                android:textColor="@color/title_light_color"
                android:textSize="16sp" />
        </LinearLayout>
    </com.kuelye.vkcup20ii.core.ui.view.BottomSheetLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>